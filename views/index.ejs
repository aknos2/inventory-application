<!DOCTYPE html>
<html lang="en">
  <%- include ('partials/head.ejs') %>
<body>
  <%- include ('partials/nav.ejs')  %>

  <main>
    <h2 class="my-list">My list</h2>
    <div class="monsters-container">
      <% monsters.forEach(monster => { %>
        <div class="monster-card">
          <form action="/delete/<%= monster.id %>" method="POST">
            <button class="delete-btn permanent-marker-regular" type="submit" onclick="return confirm('Are you sure you want to delete this monster?');">X</button>
          </form>
          <h2><%= monster.username %></h2>
          <img src="/images/monsters/<%= monster.image_filename %>" alt="<%= monster.username %>" />
        </div>
      <% }) %>
    </div>
    <a class="credits" href="http://www.freepik.com" target="_blank" rel="noopener noreferrer">Designed by <span class="underline">Freepik</span></a>
  </main>
</body>
</html>